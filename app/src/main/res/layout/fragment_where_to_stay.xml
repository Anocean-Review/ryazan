<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:id="@+id/where_to_stay_motion">

    <ImageView
        android:id="@+id/iv_background_where_to_stay_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/where_to_stay_background"
        app:layout_constraintBottom_toBottomOf="@+id/includedTransparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_recycler_background_where_to_stay_fragment"
        android:layout_width="0dp"
        android:layout_height="@dimen/_161sdp"
        android:background="@color/where_to_stay_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_background_where_to_stay_fragment" />

    <include
        android:id="@+id/includedTransparent"
        layout="@layout/toolbar_default_transparent"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fragment_where_to_stay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includedTransparent" />

</androidx.constraintlayout.widget.ConstraintLayout>