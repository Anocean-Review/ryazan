<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_item_recycler_hotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@color/white"
        android:elevation="0dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp">

            <ImageView
                android:id="@+id/iv_skeleton_photo_item_recycler_go"
                android:layout_width="0dp"
                android:layout_height="@dimen/item_recycler_go_height"
                android:background="@color/text_background_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/tv_skeleton_title_item_recycler_go"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:background="@color/text_background_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_skeleton_photo_item_recycler_go" />

            <ImageView
                android:id="@+id/tv_skeleton_adress_item_recycler_go"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/text_background_grey"
                app:layout_constraintStart_toStartOf="@+id/tv_skeleton_title_item_recycler_go"
                app:layout_constraintTop_toBottomOf="@+id/tv_skeleton_title_item_recycler_go" />

            <ImageView
                android:id="@+id/tv_skeleton_description_item_recycler_go"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/text_background_grey"
                app:layout_constraintStart_toStartOf="@+id/tv_skeleton_adress_item_recycler_go"
                app:layout_constraintTop_toBottomOf="@+id/tv_skeleton_adress_item_recycler_go" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>